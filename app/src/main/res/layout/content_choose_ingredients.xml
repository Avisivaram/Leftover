<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ChooseIngredients">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/selectedIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/search_ingredients"
        android:layout_below="@id/selectedIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="10dp"
        />

    <com.huji.foodtricks.foodtricks.ScrollableGridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_below="@id/search_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:numColumns="5"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:nestedScrollingEnabled="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/feed_me_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:layout_toLeftOf="@id/exclude_all_ingridients_fab"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/gridview"
        android:onClick="feedMe"
        android:src="@drawable/find_recipe_button"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
         />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exclude_all_ingridients_fab"
        android:layout_below="@id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="excludeAllIngridients"
        android:src="@drawable/exclude_all_fap"
        app:backgroundTint="@color/bg_screen1"
        app:fabSize="normal"
        />
</RelativeLayout>
</ScrollView>